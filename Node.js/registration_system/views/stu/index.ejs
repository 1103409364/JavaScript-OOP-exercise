<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>所有课程</title>

    <link href="/css/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="/css/sb-admin.css" rel="stylesheet">
    <link href="/css/paging.css" rel="stylesheet">

    <!-- Page level plugin CSS-->
    <link href="/css/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <style>
        footer.sticky-footer {
            width: 100%;
        }

        #courseTb {
            font-size: 14px;
        }

        #courseTb tr td {
            overflow: hidden;
        }
    </style>

</head>

<body id="page-top" class="bg-info">
    <!-- Navbar -->
    <% include common/nav %>

    <div id="wrapper">
        <div id="content-wrapper">
            <div class="container-fluid">
                <!-- /.container-fluid -->
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-10">
                        <div class="card mb-3">
                            <div class="card-header">
                                <i class="fas fa-fw fa-graduation-cap"></i> 2019选修课</div>
                            <div class="table-responsive table-striped table-bordered">
                                <table class="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th scope="col" class="text-center" width="80px">编号</th>
                                            <th scope="col" class="text-center">课程名称</th>
                                            <th scope="col" class="text-center">上课时间</th>
                                            <th scope="col" class="text-center">可报人数</th>
                                            <th scope="col" class="text-center">教师</th>
                                            <th scope="col" class="text-center" width="700px">课程简介</th>
                                            <th scope="col" class="text-center" width="200px">操作</th>
                                        </tr>
                                    </thead>
                                    <tbody id="courseTb">
                                        <!-- 表格内容 -->
                                    </tbody>
                                </table>
                                <!-- 分页 -->
                            </div>
                            <div class="paging"></div>

                            <div class="card-body">
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Sticky Footer -->
            <% include common/footer %>
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <% include common/toTopBtn %>

    <!-- Logout Modal-->
    <% include common/logout %>

    <!-- Bootstrap core JavaScript-->
    <script src="/js/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/js/jquery/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin.min.js"></script>
    <script src="/js/tablePaging.js"></script>

    <script>
        // 拉取数据，前端分页
        $.post("/", (data) => {
            if (data.result === 1) {
                console.log(data);
                renderCourseTb(data);
            } else {
                alert("服务器错误");
            }
        });

        function renderCourseTb(data) {
            $courseTb = $("#courseTb");
            var isOpen = data.isOpen;
            var courseArr = data.courses;
            var rows = 8; //每页10条
            // 分页总页数
            var pageNo = Math.ceil(courseArr.length / rows);
            // 先排序：按照课程编号排序
            courseArr.sort((a, b) => {
                return a.cid - b.cid;
            })
            // 每页内容，放进一个数组
            var onePageArr = courseArr.slice(0, rows);

            $('.paging').page({
                leng: 10,//初始分页数
                activeClass: 'activP', //active 类样式定义
                clickBack: function (page) {
                    // console.log(page);
                    // 跳过几页读一页
                    onePageArr = courseArr.slice((page - 1) * rows, (page - 1) * rows + rows);
                    renderOnePage(onePageArr);
                }
            })
            renderOnePage(onePageArr);
            // 设置总页数
            $('.paging').setLength(pageNo)


        }
        // 渲染当前页
        function renderOnePage(onePageArr) {
            // 先清空当前页
            $courseTb.html("");
            $.each(onePageArr, (i, item) => {
                var domStr = "";
                // console.log(i, item);
                domStr = ["<tr>",
                    "    <td class=\"text-center\">" + item.cid + "</td>",
                    "    <td class=\"text-center\">" + item.name + "</td>",
                    "    <td class=\"text-center\">" + item.time + "</td>",
                    "    <td class=\"text-center\">" + item.number + "</td>",
                    "    <td class=\"text-center\">" + item.teacher + "</td>",
                    "    <td class=\"text-left\">" + item.introduction + "</td>",
                    "    <td class=\"text-center\">",
                    "    <button type=\"button\" class=\"btn btn-primary\">可报名</button>",
                    "    </td>",
                    "</tr>"].join("");
                $courseTb.append(domStr);
            })
        }
    </script>
</body>

</html>